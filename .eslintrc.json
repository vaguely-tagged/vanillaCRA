{
    "parser": "@babel/eslint-parser",

   "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime"
    ],

    "parserOptions": {
        "babelOptions": {
            "presets": ["@babel/preset-react"]
        }
    },

    "plugins": [
        "react"
    ],

    "ignorePatterns": ["webpack.config.js"],

    "env": {
        "browser": true,
        "node": true
    },

    "globals": {
        "document": false
    },

    "rules:": {
        "react/jsx-uses-react": "warn",
        "react/jsx-uses-vars": "warn"
    }

}
